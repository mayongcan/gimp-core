<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<comment>
		代码生成器配置文件: 
		1.会为所有的property生成property_dir属性,如pkg=com.gimplatform => pkg_dir=com/gimplatform
		2.可以引用环境变量: ${env.JAVA_HOME} or System.properties: ${user.home},property之间也可以相互引用
	</comment>
	
	<!-- 模板路径 -->
	<entry key="templatePath">../GenCodeTemplate</entry>
	
	<!-- 输出目录,相对 cd 路径 -->
	<entry key="outRoot">../PlatformGenCode/code</entry>
	
	<!-- 基础包 -->
	<entry key="basepackage">com.gimplatform</entry>

	<!-- 子包 -->
	<entry key="subpackage">core</entry>

	<!-- restful api 接口路径 -->
	<entry key="restfulPath">/api/system/testtree</entry>

	<!-- 页面路径 -->
	<entry key="pagePath">/admin/system/testtree</entry>
	
	<!-- 页面类型：1列表 2树 -->
	<entry key="pageType">1</entry>
	<entry key="moduleName">测试模块</entry>
	<entry key="tableColumn"></entry>
	<entry key="treeInfo"></entry>

	<!-- 需要移除的表名前缀,使用逗号进行分隔多个前缀,示例值: t_,v_ -->
	<entry key="tableRemovePrefixes">T_AR,T_BD,T_CD,T_PD,T_CL,T_IP,T_LO,T_RI,T_EV,SYS_</entry>

	<!-- 需要移除的列名前缀,逗号分隔,示例: S_,I_ -->
	<entry key="rowRemovePrefixes">S_,B_,I_,DT_,TS_,M_,F_,PK_I_N,PK_I_S</entry>

	<!-- 需要忽略的表,逗号分隔,示例: ACT_,BATCH_ -->
    <entry key="skipTablePrefixes">ACT_,tmp_</entry>

    <entry key="isOverride">true</entry>
    <entry key="removeExtensions">.ftl,.vm</entry>
    <entry key="includes"></entry>
    <entry key="excludes"></entry>
    <entry key="sourceEncoding">UTF-8</entry>
    <entry key="outputEncoding">UTF-8</entry>
	
	<!-- 数据库类型映射  -->
	<entry key="java_typemapping.java.sql.Timestamp">Date</entry>
	<entry key="java_typemapping.java.sql.Date">Date</entry>
	<entry key="java_typemapping.java.sql.Time">Date</entry>
	<entry key="java_typemapping.java.util.Date">Date</entry>
	<entry key="java_typemapping.java.lang.Byte">Integer</entry>
	<entry key="java_typemapping.java.lang.Short">Integer</entry>
	<entry key="java_typemapping.java.lang.Integer">Integer</entry>
	<entry key="java_typemapping.java.lang.Long">Long</entry>
	<entry key="java_typemapping.java.lang.String">String</entry>
	<entry key="java_typemapping.java.math.BigDecimal">Double</entry>
		
	<!-- Mysql连接,useInformationSchema 取出表名注释 -->
	<entry key="jdbc.url">jdbc:mysql://localhost:3306/gimplatform?useUnicode=true&amp;characterEncoding=utf8&amp;useInformationSchema=true</entry>
	<entry key="jdbc.driver">com.mysql.jdbc.Driver</entry>
	<entry key="jdbc.username">root</entry>
	<entry key="jdbc.password">root</entry>
	
</properties>